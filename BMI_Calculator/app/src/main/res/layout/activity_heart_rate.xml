<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeartRate_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heart Rate Monitor"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lbl_max_rate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_max_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/lbl_target_rate_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_target_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/lbl_age_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Your Age"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:paddingBottom="15dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_calc_heart"
            android:layout_width="117dp"
            android:layout_height="76dp"
            android:layout_marginBottom="20dp"
            android:text="CALC" />

        <Button
            android:id="@+id/btn_clear_heart"
            android:layout_width="117dp"
            android:layout_height="76dp"
            android:text="CLEAR" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>